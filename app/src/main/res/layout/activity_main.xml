<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/rainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="rain"
        app:layout_constraintBottom_toTopOf="@+id/imageViewInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/udnieButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewInput"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewOutput"
        app:srcCompat="@drawable/akarenga"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageViewOutput"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/akarenga"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/mosaicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="mosaic"
        app:layout_constraintBottom_toTopOf="@+id/imageViewInput"
        app:layout_constraintEnd_toStartOf="@+id/candyButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/candyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="candy"
        app:layout_constraintBottom_toTopOf="@+id/imageViewInput"
        app:layout_constraintEnd_toStartOf="@+id/udnieButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mosaicButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/udnieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="udnie"
        app:layout_constraintBottom_toTopOf="@+id/imageViewInput"
        app:layout_constraintEnd_toStartOf="@+id/rainButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/candyButton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>